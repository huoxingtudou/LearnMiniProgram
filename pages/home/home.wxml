<!--page/home/home.wxml-->
<!-- 1.使用自定义组件 -->
<my-cpn/>

<!-- 2. 给自定义组件传递数据/样式-->
<my-prop title="哈哈哈" titleclass="red"></my-prop>
<my-prop title="啦啦啦" titleclass="green"></my-prop>
<my-prop titleclass="blue"></my-prop>

<!-- 3.自定义事件 -->
<view>当前计数：{{counter}}</view>
<my-event bind:increment="handleIncrement"/>

<!-- 5.tab-control的练习 -->
<w-tab-control titles="{{['衣服' , '裤子' , '鞋子']}}"
                bind:itemclick="tabControlClick"/>

<!--6.直接选中组件修改数据，调用方法-->
<my-sel id="sel-class"/>
<button size="mini" bind:tap="handleIncrementCpn">修改组件内数据</button>

<!-- 7.1插槽的使用 -->
<my-slot>
  <button>按钮</button>
</my-slot>

<my-slot>
  <text>哈哈哈哈</text>
</my-slot>

<!-- 7.2.多个插槽的使用 -->
<!-- 
  注意事项：
    1.给每一个插槽起一个名字：name属性
    2.必须在Conponent对象中添加一个选项：options
 -->
<my-mslot>
  <button size="mini" slot="slot1">按钮</button>
  <slider slot="slot2"></slider>
  <text slot="slot3">哈哈哈</text>
</my-mslot>